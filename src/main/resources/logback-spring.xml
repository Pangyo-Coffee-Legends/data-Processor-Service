<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 로그 경로 설정 -->
    <springProperty name="LOG_PATH" source="logging.file.path" defaultValue="./logs"/>

    <!-- 1) Paho 내부 디테일 로그 억제 -->
    <logger name="org.eclipse.paho.client.mqttv3.internal" level="ERROR"/>

    <!-- 2) 파일 출력용 Appender -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp timeZone="Asia/Seoul"/>
                <mdc/>
                <markers/>      <!-- StructuredArguments.entries(...) 결과를 최상위에 노출 -->
                <loggerName/>
                <threadName/>
                <message/>
            </providers>
        </encoder>
    </appender>

    <!-- 3) 콘솔 출력용 Appender -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp timeZone="Asia/Seoul"/>
                <mdc/>
                <markers/>
                <loggerName/>
                <threadName/>
                <message/>
            </providers>
        </encoder>
    </appender>

    <!-- 4) 루트 로거에 두 개 모두 연결 -->
    <root level="INFO">
        <appender-ref ref="JSON_FILE"/>
        <appender-ref ref="JSON_CONSOLE"/>
    </root>

</configuration>
